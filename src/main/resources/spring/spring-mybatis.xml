		/> <tx:method name="select*" propagation="SUPPORTS" /> <tx:method name="list*" 
		propagation="SUPPORTS" /> </tx:attributes> </tx:advice> <aop:config> <aop:pointcut 
		id="serviceCut" expression="execution(public com.example.demo.service.impl.*.*(..))" 
		/> <aop:advisor pointcut-ref="serviceCut" advice-ref="txAdvice" /> </aop:config> -->

</beans>